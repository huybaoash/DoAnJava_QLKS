                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Button>
                  <Button layoutX="159.0" layoutY="233.0" mnemonicParsing="false" onAction="#PressEsc" onMouseClicked="#PressEsc" prefHeight="31.0" prefWidth="137.0" style="-fx-background-color: #E96151;" text="Cancel" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Button>
                  <Hyperlink layoutX="19.0" layoutY="276.0" onAction="#PressForgot" text="Forgot password">
                     <font>
                        <Font name="System Italic" size="14.0" />
                     </font>
                  </Hyperlink>
               </children>
            </Pane>
         </children>
      </AnchorPane>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
